from src.data_preprocessing import load_data, preprocess_data
from src.model_training import train_models, evaluate_models
from src.utils import save_model

# Load and preprocess data
df = load_data('../data/sales_data.csv')
X_train, X_test, y_train, y_test = preprocess_data(df, target_column='sales')

# Train models
models = train_models(X_train, y_train)

# Evaluate models
results = evaluate_models(models, X_test, y_test)

# Save best model (example: RandomForest)
best_model = models['RandomForest']
save_model(best_model, '../models/best_sales_model.pkl')
